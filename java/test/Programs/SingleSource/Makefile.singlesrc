# rule to build raw bytecode from a classfile
%.raw.bc: %.class $(CLASS2LLVM)
	@$(ECHO) Compiling $<
	$(CLASS2LLVM) -cp $(CLASSPATH):Output $(subst /,.,$(*F)) | \
	$(LOPT) -simplifycfg -mem2reg > $@

include $(LEVEL)/test/Makefile.test
