ifdef BUILD_JAVA_SOURCE
all:: .class-stamp
.class-stamp: $(shell find . -name '*.java')
	$(JAVAC) $?
	touch .class-stamp
endif

CLASS2LLVM := $(LEVEL)/tools/Debug/class2llvm$(EXEEXT)
